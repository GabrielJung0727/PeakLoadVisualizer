{
  "name": "win2016-dynamic-load-demo",
  "version": "0.1.0",
  "private": true,
  "description": "Windows Server 2016 기반 동적 부하 처리 웹서비스 데모 (TS + Express)",
  "scripts": {
    "build:server": "tsc -p tsconfig.json",
    "build:client": "tsc -p tsconfig.client.json",
    "build": "npm run build:server && npm run build:client",
    "dev": "concurrently \"npm:dev:server\" \"npm:watch:client\"",
    "dev:server": "ts-node src/server/app.ts",
    "watch:client": "tsc -p tsconfig.client.json --watch",
    "start": "node dist/server/app.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/node": "^18.18.0",
    "concurrently": "^8.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
